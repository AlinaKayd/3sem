#include <sys/types.h>
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>

int main()
{
  int fd;
  char str[] = malloc(5, sizeof(char));
  umask(0);
  if(fd = open("hello.c", O_RDWR, 0666) < 0)
  {  
    printf("Can`t open file\n");
    exit(-1);
  }
  while( read(fd, str, 5) != 0)
    printf("%s", str);
  free(str);
  return 0;
} 
